<UserControl x:Class="Scumle.View.Shape"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scumle.View"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ControlTemplate x:Key="handle">
                <Ellipse Width="30" Height="30" Fill="Black"/>
            </ControlTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <Thumb Name="handle" DragDelta="onDragDelta" Template="{StaticResource handle}"/>
        <Label Content="{Binding Name}"></Label>
    </StackPanel>
</UserControl>
