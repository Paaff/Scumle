<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Scumle.View.Resources"
                    xmlns:vm="clr-namespace:Scumle.ViewModel"
                    xmlns:uc="clr-namespace:Scumle.View.UserControls">

    <ControlTemplate x:Key="DefaultShape">
        <Ellipse Width="20" Height="20" Fill="black"></Ellipse>
    </ControlTemplate>

    <ControlTemplate x:Key="UMLShapeTemplate">
        <StackPanel Background="Gray">
            <Label Content="{Binding Name}" FontSize="12"></Label>
            <TextBox AcceptsReturn="True" TextWrapping="Wrap" />
        </StackPanel>
    </ControlTemplate>

    <DataTemplate DataType="{x:Type vm:ShapeViewModel}">
        <uc:ShapeUserControl Template="{StaticResource DefaultShape}"></uc:ShapeUserControl>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:UMLClassViewModel}">
        <uc:ShapeUserControl Template="{StaticResource UMLShapeTemplate}"></uc:ShapeUserControl>
    </DataTemplate>
</ResourceDictionary>
    