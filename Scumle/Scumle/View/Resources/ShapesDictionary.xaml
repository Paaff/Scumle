<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Scumle.View.Resources"
                    xmlns:vm="clr-namespace:Scumle.ViewModel"
                    xmlns:uc="clr-namespace:Scumle.View.UserControls">
    
    <ControlTemplate x:Key="DefaultShape">
        <StackPanel>
            <Ellipse Width="30" Height="30" Fill="Black"/>
            <TextBox Text="{Binding Name}"></TextBox>
        </StackPanel>
    </ControlTemplate>

    <ControlTemplate x:Key="ClassForm">
        <StackPanel>
            <Label Content="Drag me"></Label>
            <TextBox Text="Title"/>
            <TextBox Text="Fields"/>
            <TextBox Text="Methods"/>
        </StackPanel>
    </ControlTemplate>
    
    <DataTemplate DataType="{x:Type vm:ShapeViewModel}">
        <uc:ShapeUserControl Template="{StaticResource DefaultShape}"></uc:ShapeUserControl>
    </DataTemplate>
</ResourceDictionary>
    