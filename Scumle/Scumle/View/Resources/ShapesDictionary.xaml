<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Scumle.View.Resources"
                    xmlns:vm="clr-namespace:Scumle.ViewModel"
                    xmlns:v="clr-namespace:Scumle.View"
                    xmlns:uc="clr-namespace:Scumle.View.UserControls"
                    xmlns:shapes="clr-namespace:Scumle.ViewModel.Shapes"
                    xmlns:Arrows="clr-namespace:Scumle.View.Arrows">

    <DataTemplate DataType="{x:Type shapes:EllipseViewModel}">
        <Ellipse Fill="{Binding ShapeColor}"/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type shapes:RectangleViewModel}">
        <Rectangle Fill="{Binding ShapeColor}"/>
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:UMLClassViewModel}">
        <v:UmlClass/>
    </DataTemplate>
    
    <ControlTemplate x:Key="NoScroll">
        <ItemsPresenter></ItemsPresenter>
    </ControlTemplate>

</ResourceDictionary>
    