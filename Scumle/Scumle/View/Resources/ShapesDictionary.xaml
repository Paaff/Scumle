<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Scumle.View.Resources"
                    xmlns:vm="clr-namespace:Scumle.ViewModel"
                    xmlns:uc="clr-namespace:Scumle.View.UserControls">

    <Style x:Key="ShapeConnection" TargetType="Line">
        <Setter Property="X1" Value="20"/>
        <Setter Property="Y1" Value="20"/>
        <Setter Property="X2" Value="100"/>
        <Setter Property="Y2" Value="100"/>
        <Setter Property="StrokeThickness" Value="5"/>
        <Setter Property="Stroke" Value="Red"/>
    </Style>

    <DataTemplate DataType="{x:Type vm:LineViewModel}">
        <Line Style="{StaticResource ShapeConnection}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ShapeViewModel}">
        <Ellipse Fill="Blue"></Ellipse>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:UMLClassViewModel}">
        <StackPanel Background="Gray">
            <Label Content="{Binding Name}" FontSize="12"></Label>
            <TextBox AcceptsReturn="True" TextWrapping="Wrap" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
    