<Thumb x:Class="Scumle.View.UserControls.ShapeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scumle.View.UserControls"
             xmlns:vm="clr-namespace:Scumle.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DragDelta="ShapeMove">
    <Thumb.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <Style TargetType="Thumb">
                <EventSetter Event="DragStarted" Handler="StartResize"></EventSetter>
                <EventSetter Event="DragCompleted" Handler="EndResize"></EventSetter>
                <Setter Property="LayoutTransform" Value="{Binding ElementName=Diagram, Path=LayoutTransform.Inverse}"></Setter>
                <Setter Property="Visibility" Value="{Binding IsSelected, Converter={StaticResource BoolToVis}, FallbackValue=Hidden}"></Setter>
                <Setter Property="Panel.ZIndex" Value="1"></Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Border BorderBrush="LightGray" Width="8" Height="8" BorderThickness="1">
                                <Rectangle Fill="White"></Rectangle>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="local:ConnectionPoint">
                <Setter Property="Panel.ZIndex" Value="1"></Setter>
            </Style>
        </ResourceDictionary>
    </Thumb.Resources>

    <Thumb.Template>
        <ControlTemplate TargetType="{x:Type Thumb}">
            <Grid>
                <!-- Static content for shape-->
                <Thumb DragDelta="ShapeResizeNE" Cursor="SizeNESW"  HorizontalAlignment="Right" VerticalAlignment="Top"></Thumb>
                <Thumb DragDelta="ShapeResizeNW" Cursor="SizeNWSE" HorizontalAlignment="Left" VerticalAlignment="Top"></Thumb>
                <Thumb DragDelta="ShapeResizeSE" Cursor="SizeNWSE" HorizontalAlignment="Right" VerticalAlignment="Bottom"></Thumb>
                <Thumb DragDelta="ShapeResizeSW" Cursor="SizeNESW" HorizontalAlignment="Left" VerticalAlignment="Bottom"></Thumb>

                <Thumb DragDelta="ShapeResizeE" Cursor="SizeWE" HorizontalAlignment="Right" VerticalAlignment="Center"></Thumb>
                <Thumb DragDelta="ShapeResizeW" Cursor="SizeWE" HorizontalAlignment="Left" VerticalAlignment="Center"></Thumb>
                <Thumb DragDelta="ShapeResizeN" Cursor="SizeNS" HorizontalAlignment="Center" VerticalAlignment="Top"></Thumb>
                <Thumb DragDelta="ShapeResizeS" Cursor="SizeNS" HorizontalAlignment="Center" VerticalAlignment="Bottom"></Thumb>

                <local:ConnectionPoint HorizontalAlignment="Center" VerticalAlignment="Top"></local:ConnectionPoint>
                <local:ConnectionPoint HorizontalAlignment="Center" VerticalAlignment="Bottom"></local:ConnectionPoint>
                <local:ConnectionPoint HorizontalAlignment="Left" VerticalAlignment="Center"></local:ConnectionPoint>
                <local:ConnectionPoint HorizontalAlignment="Right" VerticalAlignment="Center"></local:ConnectionPoint>
                <!-- Dynamic content for shape-->
                <ContentPresenter Margin="4" Content="{Binding}" Width="{Binding Width}" Height="{Binding Height}"></ContentPresenter>
            </Grid>
        </ControlTemplate>
    </Thumb.Template>
</Thumb>
