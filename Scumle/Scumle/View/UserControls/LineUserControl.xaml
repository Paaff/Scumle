<UserControl x:Class="Scumle.View.UserControls.LineUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scumle.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="ShapeConnection" TargetType="Line">
            <Setter Property="X1" Value="{Binding From.CenterX}"/>
            <Setter Property="Y1" Value="{Binding From.CenterY}"/>
            <Setter Property="X2" Value="{Binding To.CenterX}"/>
            <Setter Property="Y2" Value="{Binding To.CenterY}"/>
        </Style>
    </UserControl.Resources>
    <Canvas>
        <ContentPresenter Content="{Binding}"></ContentPresenter>
    </Canvas>
</UserControl>
